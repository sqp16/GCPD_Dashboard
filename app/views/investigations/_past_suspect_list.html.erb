<% unless @previous_suspects.empty? %>
  <div class="card grey lighten-3">
    <div class="card-content">
      <span class="card-title">Previous Suspects</span>
      <table class="lined">
        <thead>
          <th>Criminal</th>
          <th>Aka</th>
          <th>Enhanced Powers?</th>
          <th>Added on</th>
          <th>Dropped on</th>
        </thead>
          <% for suspect in @previous_suspects %>
            <tr>
              <td>
                &nbsp;<%= link_to suspect.criminal.proper_name, criminal_path(suspect.criminal) %>
              </td>
              <td><%= suspect.criminal.aka%></td>
              <td><%= suspect.criminal.enhanced_powers ? "Yes":"No" %></td>
              <td><%= suspect.added_on.strftime("%m/%d/%y") %></td>
              <td><%= suspect.dropped_on.strftime("%m/%d/%y") %></td>
            </tr>
          <% end %>
      </table>
    </div>
  </div>
<% else%>
  <h5>No past suspects</h5>
<% end%>