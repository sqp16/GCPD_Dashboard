  <div class="row">
    <div class="col s10">
      <div class="row">
        <i class="material-icons prefix col s1" style="margin-top: 20px;">search</i>
          <%= form_with url: investigation_search_path, method: :get, class: "form-inline col s11", id: "search" do %>
            <%= text_field_tag 'query', '', placeholder: "Search ..." %>
