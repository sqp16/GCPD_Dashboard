<div id="form-template-2">
  <h5>New Crime Investigation</h5>
  <% @crime_investigation = CrimeInvestigation.new %>
  <!-- now the form template itself -->
  <div class="row">
    <div class="col">
      <%= simple_form_for(@crime_investigation) do |f| %>
        <%= f.error_notification %>
        <div class="row">
          
          <div class="form-inputs">
            <%= f.input :crime_id, collection: (Crime.active.alphabetical.to_a - @case_crimes), include_blank: true %>
            <%= f.input :investigation_id, as: :hidden, input_html: { value: @investigation.id } %>
          </div>
        
        </div>
        <div class="row">
          <div class="form-actions col">
            <%= f.button :submit %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>