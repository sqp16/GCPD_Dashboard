<% unless @investigation.crime_investigations.empty? %>
  <div class="card yellow lighten-4">
    <div class="card-content">
      <span class="card-title">Crime Investigations</span>
      <ul>
        <% for crime in @investigation.crime_investigations %>
          <li>
            <% if can? :destroy, CrimeInvestigation %>
                <%= link_to(crime_investigation_path(crime), method: :delete, class: 'remove') do %>
                    x&nbsp;&nbsp;
                <% end %>
            <% end %>
            <%= crime.crime.name %>
          </li>
        <% end %>
      </ul>
    </div>
    <% if can? :new, CrimeInvestigation %>
      <div class="card-action">
        <%= link_to "Add a new crime", new_crime_investigation_path(investigation_id: @investigation.id) %>
      </div>
    <% end %>
  </div>
<% else %>
  <% if can? :new, CrimeInvestigation %>
    <div class="card grey lighten-3">
      <div class="card-action">
        <%= link_to "Add a new crime", new_crime_investigation_path(investigation_id: @investigation.id) %>
      </div>
    </div>
  <% end %>
<% end %>