<div class="row">
  <div class="col s7">
    <h4>Adding suspect</h4>
    <%= simple_form_for(@suspect) do |f| %>
      <%= f.error_notification %>
      <div class="row">
        <div class="form-inputs">
          <%= f.input :investigation_id, collection: (Investigation.is_open.alphabetical.to_a), include_blank: true %>
          <%= f.input :criminal_id, collection: (Criminal.alphabetical.to_a), include_blank: true %>
        </div>
      </div>
      <div class="row">
        <div class="form-actions col s8">
          <%= f.button :submit %>
        </div>
      </div>
    <% end %>
  </div>
    
  </div>
</div>