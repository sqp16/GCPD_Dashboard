<% unless @prev_suspect.empty? %>
  <div class="card grey lighten-3">
    <div class="card-content">
      <span class="card-title">Previous Suspect In</span>
      <table class="lined">
        <thead>
          <th>Case</th>
          <th>Added On</th>
          <th>Dropped On</th>
        </thead>
          <% for suspect in @prev_suspect %>
            <tr>
              <td>
                &nbsp;<%= link_to suspect.investigation.title, investigation_path(suspect.investigation) %>
              </td>
              <td><%= suspect.added_on.strftime("%m/%d/%y") %></td>
              <td><%= suspect.dropped_on.strftime("%m/%d/%y") %></td>
            </tr>
          <% end %>
      </table>
    </div>
  </div>
<% else%>
  <h5>Not previously a suspect in any case.</h5>
<% end%>