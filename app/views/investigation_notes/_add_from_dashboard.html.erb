
 <div class="row">
    <div class="col s8">
      <h4>New Investigation Note:</h4>
      <%= simple_form_for(investigation_notes_url) do |f| %>
        <%= f.error_notification %>
        <div class="row">
          <div class="form-inputs">
              <%= f.input :investigation_id, collection: (Investigation.is_open.alphabetical.to_a), include_blank: true %>
              <%= f.input :officer_id, as: :hidden, input_html: { value: @current_user.officer } %>
              <%= f.input :content, label_html: { class: 'active' } %>
              <%= f.input :date, input_html: { value: Date.current } %>
              <%= f.input :from, as: :hidden, input_html: { value: "dashboard" } %>
          </div>
        </div>
        <div class="row">
          <div class="form-actions col s8">
            <%= f.button :submit %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>