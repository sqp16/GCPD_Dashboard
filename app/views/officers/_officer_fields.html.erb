<%= f.input :first_name, label_html: { class: 'active' } %>
<%= f.input :last_name, label_html: { class: 'active' } %>
<%= f.input :rank, label_html: { class: 'active' } %>

<!--Why check role here-->
<% if current_user.role?(:commish) %>
  <%= f.input :role, collection: User::ROLES, include_blank: true %>
<% elsif current_user.role?(:chief) %>
  <%= f.input :role, value: :officer%>
<% end %>


<%= f.input :unit_id, collection: Unit.alphabetical.to_a, include_blank: true %>
<%= f.input :ssn, label_html: { class: 'active' } %>
<%= f.input :active %>

